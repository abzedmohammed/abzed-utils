{
  "compilerOptions": {
    "checkJs": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",        // <-- this enables JSX
    "allowJs": true,           // <-- optional but helps with mixed JS/JSX
    "moduleResolution": "Node" // <-- needed for clean imports
  },
  "include": ["src"] // <-- include your inputs folder
}
